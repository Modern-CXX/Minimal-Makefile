# Makefile
# 1. Prerequisites on header files generated
# 2. Compile source files in current directory only (excluding subdirs)
# 3. Minimal Makefile
#
# .
# ├── f1.c
# ├── f1.h
# ├── f2.c
# ├── f2.h
# ├── main.c
# ├── Makefile
# └── print_log.h
#

CFLAGS   = -std=c11 -Wall -W -pedantic -g # -O3
CPPFLAGS = -MMD -MP -DNDEBUG -I../hello
LDFLAGS  = #-L../hello
LDLIBS   = #-lpthread -lhello

# build shared library
#CFLAGS   += -fPIC
#LDFLAGS  += -shared

# target should match basename of one source file
main : $(patsubst %.c,%.o,$(wildcard *.c))

-include *.d

clean :
	rm -fr *.o *.d

.PHONY : clean
