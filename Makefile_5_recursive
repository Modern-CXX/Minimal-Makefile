$ cat v1
LIBDIRS = bar foo
all : $(LIBDIRS) main
$(LIBDIRS) :
	make -C $@
	cp $@/$@ $@/lib$@.so
main :
	make -C $@
clean :
	for dir in $(LIBDIRS) main ; do \
		make -C $$dir $@; \
	done
.PHONY : $(LIBDIRS) main all clean

main : foo
foo : bar
$

$ cat v2
SUBDIRS = bar foo main
subdirs : $(SUBDIRS)
$(SUBDIRS) :
	make -C $@
	cp $@/$@ $@/lib$@.so
clean :
	for dir in $(SUBDIRS); do \
		make -C $$dir $@; \
	done
.PHONY : $(SUBDIRS) subdirs clean

main :
	make -C $@

main : foo
foo : bar
$
