# Makefile

# 1. Generating prerequisites automatically for header files
# 2. Compile source files automatically in current directory tree

# .
# ├── f1.c
# ├── f1.h
# ├── f2
# │   ├── f22
# │   │   ├── f22.c
# │   │   └── f22.h
# │   ├── f2.c
# │   └── f2.h
# ├── main.c
# ├── Makefile
# └── print_log.h

# build shared library with -fPIC, -shared
CFLAGS   = -g # -O3 # -fPIC  # CXXFLAGS for .cpp
LDFLAGS  = # -L../hello # -shared
LDLIBS   = # -lhello
CPPFLAGS = -MMD -MP  # -I../hello
#CC      = $(CXX)  # link with CXX for .cpp

# target name should be basename of one of the source files
main : $(patsubst %.c,%.o,$(shell find . -type f -name "*.c"))  # .cpp
-include $(shell find . -type f -name "*.d")
clean : ; -rm -fr $(shell find . -type f -name "*.o" -o -name "*.d")
.PHONY : clean
