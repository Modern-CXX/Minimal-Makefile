C and C++ project with Makefile

$ cd myproject
$ ls
Makefile  hello    main
$
$ find . | sed -e 's;[^/]*/;|____;g;s;____|; |;g'
.
|____Makefile
|____hello
| |____Makefile
| |____hello.c
| |____hello.h
|____main
| |____Makefile
| |____main.c
$
$
$ cat Makefile
SUBDIRS = hello main
subdirs : $(SUBDIRS)
$(SUBDIRS) :
  make -C $@
clean :
  for dir in $(SUBDIRS); do \
    make -C $$dir $@; \
  done
.PHONY : $(SUBDIRS) subdirs clean

main : hello
hello :
  make -C $@
  cp hello/hello hello/libhello.so
  # cp hello/hello hello/libhello.dylib # macOS
$
$
$ cat hello/Makefile
# build shared library with -fPIC, -shared
CFLAGS   = -g -fPIC # -O3 # CXXFLAGS for .cpp
LDFLAGS  = # -L./hello # -shared
LDLIBS   = # -lhello
CPPFLAGS = -MMD -MP # -I./hello
#CC      = $(CXX) # link with CXX for .cpp
#LDFLAGS += -install_name @rpath/hello # building .dylib, macOS

# target name is basename of one of the source files
hello : $(patsubst %.c,%.o,$(wildcard *.c)) # .cpp
-include *.d
clean : ; -rm -fr *.o *.d
.PHONY : clean
$
$
$ cat hello/hello.c
#include <stdio.h>
#include "hello.h"

void hello()
{
  printf("hello\n");
}
$
$
$ cat hello/hello.h
#ifndef _hello_
#define _hello_

void hello();

#endif
$
$
$ cat main/Makefile
# build shared library with -fPIC, -shared
CFLAGS   = -g # -O3 -fPIC # CXXFLAGS for .cpp
LDFLAGS  = -L../hello # -shared
LDLIBS   = -lhello
CPPFLAGS = -MMD -MP -I../hello
#CC      = $(CXX) # link with CXX for .cpp
#LDFLAGS += -shared -Wl,-rpath,../hello # linking to .so or .dylib

# target name is basename of one of the source files
main : $(patsubst %.c,%.o,$(wildcard *.c)) # .cpp
-include *.d
clean : ; -rm -fr *.o *.d
.PHONY : clean
$
$
$ cat main/main.c
#include <stdio.h>
#include "hello.h"

int main()
{
  printf("main\n");

  //Linux: LD_LIBRARY_PATH is enough for gdb debugger to
  //  trace breakpoint in shared object .so

  //macOS: needs rpath for lldb debugger to
  //  trace breakpoint in dynamic library .dylib

  hello();
}
$
