# Makefile
# 1. Prerequisites on header files generated
# 2. Put Makefile at root of source file directory
# 3. Compile source files in current directory only (excluding subdirs)
#
# .
# ├── f1.cpp
# ├── f1.h
# ├── f2.cpp
# ├── f2.h
# ├── main.cpp
# ├── Makefile
# └── print_log.h
#

OUT      = main  # should match basename of one source file
CFLAGS   = -std=c11 -Wall -W -pedantic -g # -O3
CPPFLAGS = -MMD -MP -DNDEBUG -I../hello
LDFLAGS  = #-L../hello
LDLIBS   = #-lpthread -lhello
CC       = $(CXX)  # change linker for C++

# build shared library
#OUT       = ../lib/libhello.so
#CFLAGS   += -fPIC
#LDFLAGS  += -shared

$(OUT) : $(patsubst %.cpp,%.o,$(wildcard *.cpp))

-include *.d

clean :
	rm -fr $(OUT) *.o *.d

.PHONY : clean
